<h1>
    Public Data and your Private Data
</h1>

<div class="row">
    {{#each datas}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- To do: edit Icon --}}
                </div>
                <div class="card-content center-align">
                    <h5>{{ title }}</h5>
                    <p>{{ body }}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/datas/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/datas/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories to display</p>
    {{/each}}
</div>